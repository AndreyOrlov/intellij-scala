<project>
    <property name="scala.home" value="%SCALA_HOME%"/>
    <property name="scala.lib.dir" value="${scala.home}/lib"/>
    <property name="scala.lib.jar" value="${scala.lib.dir}/scala-library.jar"/>

    <target name="compile">
        <scalac srcdir="src/org/jetbrains/scala" destdir="build" force="changed">
            <classpath>
                <pathelement location="${scala.home}/lib/scala-library.jar"/>
            </classpath>
            <include name="compile/**/*.scala"/>
            <exclude name="forget/**/*.scala"/>
        </scalac>

    </target>

</project>


